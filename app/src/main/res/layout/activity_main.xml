<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Tahajud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Tahajud"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Witir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Witir"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Rawatir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Rawatir"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Dhuha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Dhuha"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Istikhoroh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Istikhoroh"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/Tayyatul_masjid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Tayyatul masjid"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/Syuruq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sholat Syuruq"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
</LinearLayout>